{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "sourceMap": true,
    "outDir": "../../static",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    // Set the base directory to the project root
    "paths": {
      "*": [
        "*",
        "../shared/*"
      ]
    }
  },
  "include": [
    "./**/*.ts",
    "../shared/**/*.ts"
  ]
}
