{
  "name": "frontend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/frontend",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/frontend",
        "outputFileName": "app.js",
        "main": "apps/frontend/app.ts",
        "tsConfig": "apps/frontend/tsconfig.app.json",
        "platform": "browser",
        "format": ["esm"],
        "assets": [
          {
            "input": "apps/frontend",
            "glob": "index.html",
            "output": "."
          },
          {
            "input": "apps/frontend",
            "glob": "**/*.css",
            "output": "."
          }
        ]
      }
    },
    "serve": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/frontend",
        "outputFileName": "app.js",
        "main": "apps/frontend/app.ts",
        "tsConfig": "apps/frontend/tsconfig.app.json",
        "platform": "browser",
        "format": ["esm"],
        "assets": [
          {
            "input": "apps/frontend",
            "glob": "index.html",
            "output": "."
          },
          {
            "input": "apps/frontend",
            "glob": "**/*.css",
            "output": "."
          }
        ],
        "watch": true
      }
    }
  }
}
