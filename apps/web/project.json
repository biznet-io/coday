{
  "name": "web",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build:client": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "assets": [
          {
            "input": "apps/web/client",
            "glob": "index.html",
            "output": "."
          },
          {
            "input": "apps/web/client",
            "glob": "**/*.css",
            "output": "."
          },
          {
            "input": "apps/web/client/static",
            "glob": "**/*",
            "output": "static"
          }
        ],
        "esbuildOptions": {
          "outExtension": {
            ".js": ".js"
          },
          "sourcemap": true
        },
        "format": [
          "cjs"
        ],
        "main": "apps/web/client/app.ts",
        "outputFileName": "app.js",
        "outputPath": "dist/web/client",
        "platform": "browser",
        "tsConfig": "apps/web/client/tsconfig.app.json"
      },
      "configurations": {
        "watch": {
          "watch": true
        }
      }
    },
    "build:server": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "assets": [],
        "esbuildOptions": {
          "outExtension": {
            ".js": ".js"
          },
          "sourcemap": true
        },
        "external": [
          "sharp"
        ],
        "format": [
          "cjs"
        ],
        "main": "apps/web/server/server.ts",
        "outputFileName": "server.js",
        "outputPath": "dist/web/server",
        "platform": "node",
        "thirdParty": true,
        "tsConfig": "apps/web/server/tsconfig.app.json"
      },
      "configurations": {
        "watch": {
          "watch": true
        }
      }
    },
    "build:ng-client": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "web-ng:build"
      ],
      "options": {
        "commands": [
          "mkdir -p dist/web/ng-client",
          "cp -r dist/apps/web-ng/browser/* dist/web/ng-client/"
        ]
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "web:build:client",
        "web:build:server",
        "web:build:ng-client"
      ],
      "options": {
        "commands": [
          "rm -f dist/web/package.json",
          "mv dist/web/server/package.json dist/web",
          "rm dist/web/client/package.json"
        ]
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "dependsOn": ["web:build:client", "web:build:server"],
      "options": {
        "commands": ["node dist/web/server/server.js --no_auth"]
      }
    },
    "serve:watch": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run web:build:client:watch",
          "nx run web:build:server:watch",
          "nodemon --watch 'dist/web/**/*.*' --verbose --inspect-brk=9229 dist/web/server/server.js --no_auth"
        ]
      }
    }
  }
}
