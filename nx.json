{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "affected": {
    "defaultBase": "master"
  },
  "targetDefaults": {
    "build": {
      "cache": true
    },
    "@nx/esbuild:esbuild": {
      "cache": true,
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "default",
        "^default"
      ]
    },
    "nx-release-publish": {
      "dependsOn": [
        "web:build"
      ],
      "options": {
        "packageRoot": "dist/web"
      }
    },
    "lint": {
      "cache": false
    },
    "test": {
      "cache": true,
      "options": {
        "passWithNoTests": true
      }
    },
    "@nx/js:tsc": {
      "cache": true,
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "default",
        "^default"
      ]
    }
  },
  "defaultBase": "master",
  "useDaemonProcess": true,
  "plugins": [
    {
      "plugin": "@nx/jest/plugin",
      "options": {
        "targetName": "test"
      }
    },
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    }
  ],
  "release": {
    "projects": [
      "web"
    ],
    "releaseTagPattern": "release/{version}",
    "git": {
      "commitMessage": "chore(release): {version}"
    },
    "version": {
      "preVersionCommand": "npx nx run web:build",
      "currentVersionResolver": "registry",
      "preserveLocalDependencyProtocols": false,
      "manifestRootsToUpdate": [
        "apps/{projectName}"
      ]
    }
  },
  "tui": {
    "enabled": false
  }
}
