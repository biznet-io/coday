{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["ESNext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "paths": {
      "@coday/ai-thread/*": ["libs/ai-thread/*"],
      "@coday/coday-events": ["libs/coday-events/src/index.ts"],
      "@coday/core": ["libs/coday.ts"],
      "@coday/model/*": ["libs/model/*"],
      "@coday/options": ["libs/options.ts"],
      "@coday/service/*": ["libs/service/*"],
      "@coday/shared/*": ["libs/shared/*"]
    },
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules", "tmp"]
}
